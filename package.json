{
  "name": "stream-toolkit",
  "version": "2.1.0",
  "description": "handy tools for working with streams",
  "author": "Robey Pointer <robeypointer@gmail.com>",
  "license": "Apache-2.0",
  "main": "./lib/stream-toolkit",
  "keywords": [
    "streams"
  ],
  "homepage": "https://github.com/robey/stream-toolkit",
  "repository": {
    "type": "git",
    "url": "git://github.com/robey/stream-toolkit.git"
  },
  "scripts": {
    "build": "babel --source-maps --out-dir lib src",
    "build-test": "babel --source-maps --out-dir test/lib test/src",
    "clean": "rm -rf lib test/lib",
    "distclean": "npm run clean && rm -rf node_modules",
    "prepublish": "npm run build",
    "test": "npm run build && npm run build-test && mocha -R spec --colors test/lib"
  },
  "dependencies": {
    "bluebird": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-preset-es2015-node4": "^1.0.0",
    "mocha": "*",
    "mocha-sprinkles": "^2.0.0",
    "should": "*",
    "source-map-support": "*"
  },
  "files": [
    "lib",
    "test"
  ]
}
